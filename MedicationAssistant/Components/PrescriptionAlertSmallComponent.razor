<h3>Next occuring alerts</h3>

<div>
   <ol>
       @foreach(var prescriptionAlert in PrescriptionItemAlerts){
           <li>
               <label>Alert time : @prescriptionAlert.Time</label>               
               <label>there are @prescriptionAlert.PrescriptionItems.Count() items on this alert</label>
           </li>
       }
   </ol>
   <NavLink href="/Alerts" class="btn btn-success" >View All</NavLink>
</div>


@code {
    [Parameter]
    public List<PrescriptionItemAlert> PrescriptionItemAlerts { get; set;}
}