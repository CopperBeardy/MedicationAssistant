<h3>Next occurring alerts</h3>

<div>
    @if (PrescriptionItemAlerts != null)
    {
    <ol>
        @foreach (var prescriptionAlert in PrescriptionItemAlerts)
        {
            <li>Alert time : @prescriptionAlert.Time there are @prescriptionAlert.PrescriptionItems.Count() items on this alert
            </li>
        }
    </ol>
    }
    <NavLink href="/Alerts" class="btn btn-success">View All</NavLink>
</div>

@code{ 
    [Parameter]
    public IEnumerable<PrescriptionItemAlert> PrescriptionItemAlerts { get; set; }
}