@using Microsoft.AspNetCore.Components.Forms;
@typeparam TModel
<h3>@Mode Alert</h3>

@if(vm.Alert != null)
{
<EditForm Model="@vm.Alert"
          OnInvalidSubmit="(async () => await HandleSubmitAsync(false))"
          OnValidSubmit="(async () => await HandleSubmitAsync(true))">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <h2>Alert</h2>
    <p>

        <label>
            <h5><i class="fas fa-pills"></i> Alert Time </h5>
            <InputDate @bind-Value="obj => obj?.vm.Alert.Time" />
            <ConcurrencyField Model="@vm"
                              DbModel="@DbAlert"
                              Property="obj => obj?.Alert.Time">
            </ConcurrencyField>
        </label>
    </p>
    <p>

        <label>
            <h5><i class="fas fa-prescription-bottle-alt"></i> Alert For  </h5>
            <InputSelect @bind-Value="obj => obj?.vm.Alert.Prescription.Medicine.Name" >
                
            </InputSelect>
            <ConcurrencyField Model="@vm"
                              DbModel="@DbAlert"
                              Property="obj => obj?(x => x.vm.Alert.Prescription.Medicine.Name)">
            </ConcurrencyField>
        </label>    
    
    </p>
  


    <br />
    <button disabled="@Busy" class="btn btn-warning"
            @onclick="CancelAsync">
        Cancel
    </button>&nbsp;
    <button disabled="@Busy" type="submit"
            class="btn btn-primary">
        Submit
    </button>
</EditForm>
 }

    @code {
