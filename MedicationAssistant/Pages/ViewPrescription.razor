@page "/viewpre/{PrescriptionId:int}"

@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<MedicationAssistantDBContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

@if (NotFound && !Loading)
{
<div class="alert alert-warning">A Prescription with that id doesn't exist.</div> }
else
{
@if (Prescription == null || Loading)
{
<div class="alert alert-info">Loading...</div> }
else
{
<h1>@Prescription.Medicine.Name</h1>
   <br />
   @if (EditSuccess)
   {
       <div class="alert alert-success">Successfully updated the Prescription.</div>
   }
   @if (!Deleted)
   {
       <a class="btn btn-primary" href="edit/@Prescription.Id" title="Edit">Edit</a><span>&nbsp;</span>
        @if (!ShowConfirmation)
        {
            <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
        }
        else
        {
            <br />
            <br />
            <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
         } 
   }
   else
   {
       <div class="btn btn-danger">🚫 This item has been deleted.</div>
   }
}
}

@code { 
    /// <summary>
    /// Tracking of asynchronous calls.
    /// </summary>
    private bool Loading;

    /// <summary>
    /// Id from route of Prescription.
    /// </summary>
    [Parameter]
    public int PrescriptionId { get; set; }

    /// <summary>
    /// Navigation check.
    /// </summary>
    private int _lastPrescriptionId;

    /// <summary>
    /// True with redirect from successful edit.
    /// </summary>
    [Parameter]
    public bool EditSuccess { get; set; }

    /// <summary>
    /// Prescription entity.
    /// </summary>
    private Prescription Prescription { get; set; }

    /// <summary>
    /// Set to true when not found.
    /// </summary>
    private bool NotFound = false;

    /// <summary>
    /// Set to true when delete is requested.
    /// </summary>
    private bool ShowConfirmation = false;

    /// <summary>
    /// Set to true when delete is successful
    /// </summary>
    private bool Deleted = false;

    /// <summary>
    /// Navigated
    /// </summary>
    /// <returns>Task</returns>
    protected override async Task OnParametersSetAsync()
    {
        if (_lastPrescriptionId != PrescriptionId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastPrescriptionId = PrescriptionId;
            await LoadPrescriptionAsync();
        }
        await base.OnParametersSetAsync();
    }

    /// <summary>
    /// Confirm deletion
    /// </summary>
    /// <param name="result">True when user confirmed</param>
    /// <returns>Task</returns>
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    /// <summary>
    /// Loads the Prescription
    /// </summary>
    /// <returns>Task</returns>
    private async Task LoadPrescriptionAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests
        }

        NotFound = false;
        Prescription = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        Prescription = await context.Prescriptions.AsNoTracking()
            .SingleOrDefaultAsync(c => c.Id == PrescriptionId);

        if (Prescription == null)
        {
            NotFound = true;
        }

        Loading = false;
    }

    /// <summary>
    /// Deletes the Prescription.
    /// </summary>
    /// <returns>Task</returns>
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            return; // avoid concurrent requests
        }

        Loading = true;
        using var context = DbFactory.CreateDbContext();
        var Prescription = await context.Prescriptions
        .SingleOrDefaultAsync(c => c.Id == PrescriptionId);
        if (Prescription != null)
        {
            context.Prescriptions.Remove(Prescription);
            await context.SaveChangesAsync();
            Loading = false;
            Deleted = true;
        }
        else
        {
            Loading = false;
            // show not found
            await LoadPrescriptionAsync();
        }
    } }
